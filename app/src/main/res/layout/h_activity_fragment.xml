<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.lazarus.run_track1.HActivitiesFragment.HActivityFragment"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="#0060FB"
            android:id="@+id/sync_cloud"
            android:text="Sync With Cloud"
            app:layout_constraintTop_toTopOf="parent">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/h_activity_scroll"
            app:layout_constraintTop_toBottomOf="@id/sync_cloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>